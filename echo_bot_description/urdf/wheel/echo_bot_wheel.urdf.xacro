<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:include filename="$(find echo_bot_description)/urdf/wheel/echo_bot_wheel.transmission.xacro"/>
<xacro:include filename="$(find echo_bot_description)/urdf/wheel/echo_bot_wheel.gazebo.xacro"/>

  <!-- == Material == -->
  <material name="wheel_color">
    <color rgba="0.3 0.3 0.3 1"/>
  </material>

  <xacro:macro name="wheel_v0" params="prefix parent *joint_origin *joint_axis">
    <link name="wheel_${prefix}_link">
      <visual>
        <origin rpy="0 0 0"/>
        <material name="wheel_color"/>
        <geometry>
          <mesh filename="package://echo_bot_description/meshes/STL/tyre.stl"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://echo_bot_description/meshes/DAE/tyre.dae"/>
        </geometry>      
      </collision>
      <inertial>
        <mass value="0.039831"/>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <inertia  ixx="0.000008" ixy="0.0" ixz="0.0" 
                  iyy="0.000008" iyz="0.0" 
                  izz="0.000015"/>
      </inertial>
    </link>

    <joint name="wheel_${prefix}_joint" type="continuous">
      <insert_block name="joint_origin"/>
      <parent link="${parent}" />
      <child link="wheel_${prefix}_link"/>
      <insert_block name="joint_axis"/>
    </joint>
  </xacro:macro>
</robot>